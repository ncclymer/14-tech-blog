<section>
    <a href="/dashboard" class="is-pulled-right" id="back"> &larr; Back to dashboard</a>
    <h2 class="title">Make a new post.</h2><hr>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title:</label>
            <input class="input" type="text" name="post-title" id="post-title" placeholder="Insert post title here."/>
        </div>
        <div>
            <label for="post-content">Content:</label>
            <input class="textarea is-large" id="post-content" name="post-content" placeholder="Insert post content here."/>
        </div>
        <button type="submit" class="button is-primary is-pulled-right">Create a post</button>
    </form> 
</section>

<script src="\js\create-post.js"></script>